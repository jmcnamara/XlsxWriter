=IF(AND(A1>0, B1<0, C1<>0),
    SUM(
        IF(A1=1, B1^2, 0),
        IF(B1=2, C1^3, 0),
        IF(C1=3, A1^4, 0)
    ),
    IFERROR(
        INDEX(
            $D$1:$D$1000,
            MATCH(
                MAX(
                    IF(
                        $A$1:$A$1000=1,
                        $B$1:$B$1000,
                        0
                    ),
                    IF(
                        $B$1:$B$1000=2,
                        $C$1:$C$1000,
                        0
                    )
                ),
                $D$1:$D$1000,
                0
            )
        ),
        "Not Found"
    )
)
